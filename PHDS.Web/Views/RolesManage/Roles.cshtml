@using PHDS.Identity.BLL
@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.Owin
@model IEnumerable<PHDS.Identity.DAL.ApplicationRole>
@{
    ViewBag.Title = "角色管理";
}

<h2>@ViewBag.Title。</h2>

<div class="panel panel-primary">
    <div class="panel-heading">Roles</div>
    <table class="table table-striped">
        <tr><th>ID</th><th>Name</th><th>Users</th><th></th></tr>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="4" class="text-center">No Roles</td></tr>
        }
        else
        {
            foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        @if (role.Users == null || role.Users.Count == 0)
                        {
                            @: No Roles
                        }
                        else
                        {
                            <p>
                                @string.Join(", ", role.Users.Select(x => HttpContext.Current.GetOwinContext().GetUserManager<ApplicationUserManager>().FindById(x.UserId).UserName))
                            </p>
                        }
                    </td>
                    <td>
                        @using (Html.BeginForm("DeleteRole", "RolesManage", new { id = role.Id }))
                        {
                            @Html.ActionLink("Edit", "EditRole", new { id = role.Id }, new { @class = "btn btn-primary btn-xs" })
                            <button class="btn btn-danger btn-xs" type="submit">Delete</button>
                        }
                    </td>
                </tr>
            }
        }
    </table>
</div>
@Html.ActionLink("Create", "Create", null, new { @class = "btn btn-primary" })



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
