@using PHDS.Identity.BLL
@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.Owin
@model IEnumerable<PHDS.Identity.DAL.ApplicationUser>
@{
    ViewBag.Title = "角色管理";
}

<h2>@ViewBag.Title。</h2>

<div class="panel panel-primary">
    <div class="panel-heading">Users</div>
    <table class="table table-striped">
        <tr><th>ID</th><th>Name</th><th>Roles</th><th></th></tr>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="4" class="text-center">No Users</td></tr>
        }
        else
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>
                        @if (user.Roles == null || user.Roles.Count == 0)
                        {
                            @: No Roles
                        }
                        else
                        {
                            <p>
                                @string.Join(", ", user.Roles.Select(x => HttpContext.Current.GetOwinContext().Get<ApplicationRoleManager>().FindById(x.RoleId).Name))
                            </p>
                        }
                    </td>
                    <td>
                        @using (Html.BeginForm("DeleteUser", "RolesManage", new { id = user.Id }))
                        {
                            @Html.ActionLink("Edit", "EditUser", new { id = user.Id }, new { @class = "btn btn-primary btn-xs" })
                            <button class="btn btn-danger btn-xs" type="submit">Delete</button>
                        }
                    </td>
                </tr>
            }
        }
    </table>
</div>
@Html.ActionLink("Create", "Create", null, new { @class = "btn btn-primary" })



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
