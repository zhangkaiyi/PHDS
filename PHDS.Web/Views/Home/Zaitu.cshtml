
@{
    ViewBag.Title = "考勤";

    var json = Newtonsoft.Json.JsonConvert.SerializeObject(Model);

    <script>
        viewJsonData = @Html.Raw(json);
    </script>
}

@section styles{
    @Styles.Render("~/Content/DataTables/css/datatables")
    <style>
        body {
            overflow-y: scroll;
        }

        .table#details {
            font-size: 12px;
            margin-top: 0px !important;
            margin-bottom: 0px !important;
        }

        tr.active > td {
            background-color: #0075b0 !important;
            color: #fff;
        }
    </style>
}

<div style="margin: 10px auto;"></div>

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">@ViewBag.Title</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div class="row">
    <div class="col-md-12">
        <table id="details" class="table table-hover table-bordered table-striped">
            <thead></thead>
            <tbody></tbody>
            <tfoot>
                <tr></tr>
            </tfoot>
        </table>
    </div>
</div>
@section scripts {

    @Scripts.Render("~/Scripts/DataTables/datatables")

    <script>

        $.extend(true, $.fn.DataTable.defaults, CONSTANT.DATA_TABLES.DEFAULT_OPTION);

        aTable = $('#details').dataTable({
            data: viewJsonData,
            pageLength: -1,

            dom: "fr<'#detailPanel.panel panel-primary'<'panel-heading'<'row'<'col-xs-5'<'panel-title'>><'col-xs-7'>>>t<'panel-footer'>><'row'<'col-xs-5'i><'col-xs-7'p>>",
            columns: [
                { data: "CustomerId", name:"CustomerId", title: "客户编号", width: "6em", visible: false },
                { data: "单位名称", name:"CustomerName", title: "单位名称", width: "6em", visible: false },
                { data: "ItemId", title: "物料编号", width: "6em", visible: true },
                { data: "描述", name:"描述", title: "描述", width: "6em", visible: true },
                { data: "规格", name:"规格", title: "规格", width: "6em", visible: true },
                { data: "Count", title: "数量", width: "6em", visible: true },
            ],
            drawCallback: function (settings) {
                var api = this.api();
                var rows = api.rows({
                    page: 'current'
                }).nodes();
                var last = null;

                api.column('CustomerId:name', {
                    page: 'current'
                }).data().each(function (value, index) {
                    if (last !== value) {

                        $(rows).eq(index).before('<tr class="group"><td colspan="20" style="font-weight:bold">' + api.row(index).data().CustomerId  +' - '+api.row(index).data().单位名称+ '</td></tr>');

                        last = value;
                    }
                });
            }

        }
    )

        $('.nav .dropdown-menu').on('click', 'li', function () {
            aTable.api().settings()[0].ajax.data = { RCID: this.id }
            aTable.api().ajax.reload()
        })

        $('#detailPanel').css('margin-bottom', '10px').find('.panel-title').text('考勤明细')
    </script>
}
