@{
    var pinhua = new PHDS.Entities.Edmx.PinhuaEntities();
}
<div class="box box-warning">
    <div class="box-header with-border">
        <div onclick="($('.my-sidebar .fa-plus,.fa-minus').trigger('click'))">
            <h3 class="box-title">功能列表 </h3>
            <span class="box-subtitle visible-xs-inline-block"><i class="fa fa-angle-double-right"></i> 单击展开菜单</span>
        </div>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
        </div><!-- /.box-tools -->
    </div>
    <div class="box-body no-padding">
        <ul class="nav nav-pills nav-stacked">
            <li>
                <a href="@Url.Action(Helpers.Common.GetActionName<PHDS.Web.Controllers.BasicSettingController>(x=>x.Wuliao()))">
                    <i class="fa fa-th-large"></i> 清单
                    <span class="label label-primary pull-right">@pinhua.物料登记.Count()</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action(Helpers.Common.GetActionName<PHDS.Web.Controllers.BasicSettingController>(x=>x.WuliaoAdd()))">
                    <i class="fa fa-file-text-o"></i> 新增物料
                </a>

            </li>
            <li>
                <a href="#">
                    <i class="fa fa-trash-o"></i> 删除物料
                </a>
            </li>
        </ul>
    </div>
</div>