@using PHDS.Web.Controllers
@{
    var pinhua = new PHDS.Entities.Edmx.PinhuaEntities();
    var kehu = pinhua.往来单位;
}
<div class="row">
    <div class="col-xs-12">
        <div class="my-sidebar">
            <div class="box box-warning">
                <div class="box-header with-border">
                    <div onclick="($('.my-sidebar .fa-plus,.fa-minus').trigger('click'))">
                        <h3 class="box-title">功能导航 </h3>
                        <span class="box-subtitle visible-xs-inline-block"><i class="fa fa-angle-double-right"></i> 单击展开或收缩</span>
                    </div>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div><!-- /.box-tools -->
                </div>
                <div class="box-body no-padding">
                    <ul class="nav nav-pills nav-stacked">
                        <li>
                            <a href="@(Url.Action<BasicSettingController>(p=>p.Kehu()))">
                                <i class="fa fa-th-large"></i> 清单
                                <span class="label label-primary pull-right">0</span>
                            </a>
                        </li>
                        <li>
                            <a href="@(Url.Action<BasicSettingController>(p=>p.KehuAdd()))">
                                <i class="fa fa-file-text-o"></i> 新增客户
                            </a>

                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="my-content">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">客户清单</h3>
                </div>
                <div class="box-body no-padding table-responsive">
                    <table class="table table-bordered table-striped">
                        @foreach (var item in kehu)
                        {
                            <tr>
                                <td><a tabindex="0" class="btn btn-xs btn-flat btn-danger" role="button" data-toggle="popover" data-trigger="focus" data-container="body" title="删除后不可恢复" data-html="true" data-content="<button class='btn btn-primary btn-flat btn-xs'>确定</button><div class='pull-right'><button class='btn btn-danger btn-flat btn-xs'>想想</button></div>"><i class="fa fa-times"></i></a></td>
                                @*<td style="line-height:18px;">@item.单位编号</td>*@
                                <td>@item.单位名称</td>
                                <td>@item.RANK</td>
                                <td>@item.单位地址</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(function () {
            $('[data-toggle="popover"]').popover()
        })
    </script>
}
