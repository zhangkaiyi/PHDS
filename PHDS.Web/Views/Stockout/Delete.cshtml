@model PHDS.Web.Models.StockoutModels.CreateModel

@using (Html.BeginForm("Delete", "Stockout", FormMethod.Post, new { id = "DeleteForm" }))
{
    <div class="alert alert-danger">
        <h4><i class="icon fa fa-warning"></i> 警告！</h4>
        <p>您确定要删除单号为 @Model.orderId 的出库单吗？删除后无法恢复，慎重操作！</p>
        <br />
        <p>
            <button type="button" class="btn btn-warning btn-flat" id="ok"><i class="fa fa-check"></i>&nbsp;确认删除</button>
            <button type="button" class="btn btn-default btn-flat" id="cancel"><i class="fa fa-close"></i>&nbsp;放弃</button>
        </p>
    </div>
    @Html.HiddenFor(x => x.orderId)
}

@section scripts{
    <script>
        $('#DeleteForm').submit(function () {
            if(confirm('确定删除了吗？'))
                return true
            else
                return false
        })

        $('#ok').on('click', function () {
            $('#DeleteForm').submit()
        })
        $('#cancel').on('click', function () {
            location.href = '@Url.Action("Index")';
        })
    </script>
}